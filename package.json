{
  "name": "unicode-api",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "build:openapi": "tsx ./scripts/build-openapi.ts",
    "deploy": "wrangler deploy",
    "test": "pnpm vitest --run",
    "test:watch": "pnpm vitest",
    "lint": "eslint .",
    "lint:openapi": "pnpm run build:openapi && spectral lint ./node_modules/.openapi/openapi.json",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "typecheck": "pnpm run cf-typegen && tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@luxass/unicode-utils": "https://pkg.pr.new/@luxass/unicode-utils@25",
    "@scalar/hono-api-reference": "^0.8.10",
    "hono": "^4.7.10",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.30",
    "@luxass/eslint-config": "^4.18.1",
    "@luxass/spectral-ruleset": "^0.0.3",
    "@stoplight/spectral-cli": "^6.15.0",
    "eslint": "^9.27.0",
    "eslint-plugin-format": "^1.0.1",
    "nanotar": "^0.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "wrangler": "^4.15.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "workerd"
    ]
  }
}
